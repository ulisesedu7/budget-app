<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<% if @categories.empty? %>
  <h2>Currently, you have not created any categories <%= @current_user.name %></h2>
<% else %>
  <div id="categories">
    <% @categories.each do |category| %>
      <%= render category %>
      <p>
        <%= link_to "Edit this category", edit_category_path(category) %>
      </p>
    <% end %>
  </div>
<% end %>

<div class="d-grid gap-2">
  <%= link_to "New category", new_category_path, class: "btn btn-success btn-lg" %>
</div>

